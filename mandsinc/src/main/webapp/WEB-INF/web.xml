<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>products</servlet-name>
        <servlet-class>com.mycompany.mandsinc.products</servlet-class>
        <init-param>
            <param-name>Shirts</param-name>
            <param-value>30000</param-value>
        </init-param>
        <init-param>
            <param-name>Cups</param-name>
            <param-value>5000</param-value>
        </init-param>
        <init-param>
            <param-name>Books</param-name>
            <param-value>3000</param-value>
        </init-param>
        <init-param>
            <param-name>Tables</param-name>
            <param-value>70000</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>shoppingCart</servlet-name>
        <servlet-class>com.mycompany.mandsinc.shoppingCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.mycompany.mandsinc.login</servlet-class>
        <init-param>
            <param-name>user1</param-name>
            <param-value>pass1</param-value>
        </init-param>
        <init-param>
            <param-name>user2</param-name>
            <param-value>pass2</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>products</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>shoppingCart</servlet-name>
        <url-pattern>/shoppingCart</url-pattern>
        <welcome-file-list>
            <welcome-file>
            index.html
        </welcome-file>
        </welcome-file-list>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>
            index.html
        </welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
